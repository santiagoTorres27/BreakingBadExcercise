<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.breakingbadexcercise">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BreakingBadExcercise">
        <activity
            android:name=".RandomQuoteActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar" />
        <activity
            android:name=".EpisodesActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar" />
        <activity
            android:name=".CharacterDetailActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar" />
        <activity
            android:name=".CharacterActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.BreakingBadExcerciseNoActionBar">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>